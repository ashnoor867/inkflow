<h1>My Blogs</h1>

<div class="dashboard-actions">
    <a href="/blogs/create" class="btn">Create New Blog</a>
</div>

{{#if blogs.length}}
    <div class="blogs-list">
        {{#each blogs}}
            <div class="card blog-card">
                <h2><a href="/blogs/{{_id}}">{{title}}</a></h2>
                
                <div class="blog-meta">
                    <span class="date">Posted on {{formatDate createdAt}}</span>
                    
                    {{#if tags.length}}
                        <div class="tags">
                            {{#each tags}}
                                <span class="tag">{{this}}</span>
                            {{/each}}
                        </div>
                    {{/if}}
                </div>
                
                <div class="blog-actions">
                    <a href="/blogs/{{_id}}" class="btn btn-sm">View</a>
                    <a href="/blogs/edit/{{_id}}" class="btn btn-sm btn-edit">Edit</a>
                    <a href="/blogs/delete/{{_id}}" class="btn btn-sm btn-delete" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</a>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="no-blogs">
        <p>You haven't created any blogs yet.</p>
        <a href="/blogs/create" class="btn">Write Your First Blog</a>
    </div>
{{/if}}

<style>
    .dashboard-actions {
        margin: 1.5rem 0;
    }
    
    .blog-card {
        margin-bottom: 1.5rem;
    }
    
    .blog-card h2 {
        margin-bottom: 0.5rem;
    }
    
    .blog-card h2 a {
        color: #2c3e50;
        text-decoration: none;
    }
    
    .blog-card h2 a:hover {
        color: #3498db;
    }
    
    .blog-meta {
        color: #666;
        font-size: 0.9rem;
        margin: 0.5rem 0;
    }
    
    .tags {
        margin-top: 0.5rem;
    }
    
    .tag {
        display: inline-block;
        background: #f0f0f0;
        padding: 0.2rem 0.5rem;
        border-radius: 15px;
        font-size: 0.8rem;
        margin-right: 0.5rem;
        color: #333;
    }
    
    .blog-actions {
        margin-top: 1rem;
        display: flex;
        gap: 0.5rem;
    }
    
    .btn-sm {
        padding: 0.3rem 0.8rem;
        font-size: 0.9rem;
    }
    
    .btn-edit {
        background: #f39c12;
    }
    
    .btn-edit:hover {
        background: #e67e22;
    }
    
    .btn-delete {
        background: #e74c3c;
    }
    
    .btn-delete:hover {
        background: #c0392b;
    }
    
    .no-blogs {
        text-align: center;
        padding: 3rem;
        background: #f9f9f9;
        border-radius: 5px;
    }
    
    .no-blogs p {
        margin-bottom: 1rem;
    }
</style>